generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  username         String
  password         String
  email            String         @unique
  role             String?
  emailVerified    DateTime?
  profilePicture   String?
  firstName        String?
  lastName         String?
  over13           Boolean?
  parentEmail      String?
  pFirstName       String?
  pLastName        String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime?      @updatedAt
  reliabilityScore Int            @default(50)
  accounts         Account[]
  userGeometries   UserGeometry[]
  userMarks        UserMark[]
}

model Account {
  id           String    @id @default(uuid())
  userId       Int
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @updatedAt
  provider     String
  access_token String?
  scope        String?
  token_type   String?
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id            Int            @id @default(autoincrement())
  cameraId      Int
  imageURL      String
  captureDate   DateTime
  captureTime   DateTime
  roverLocation String
  resolution    String
  pixelDensity  String
  rockCount     Int?
  scouted       Boolean        @default(false)
  numQuadrants  Int?
  sized         Boolean?       @default(false)
  ImageGeometry ImageGeometry?
  RockCenter    RockCenter[]
  rockQuadrants RockQuadrant[]
  UserGeometry  UserGeometry[]
  UserMark      UserMark[]
}

model RockQuadrant {
  id             Int   @id @default(autoincrement())
  imageId        Int
  x              Int
  y              Int
  width          Int
  height         Int
  quadrantNumber Int
  image          Image @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserMark {
  id         Int   @id @default(autoincrement())
  userId     Int
  imageId    Int
  quadrantId Int?
  rockCount  Int?
  Image      Image @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, imageId], name: "userId_imageId_unique")
}

model UserGeometry {
  id      Int                     @id @default(autoincrement())
  userId  Int
  imageId Int
  drawing Unsupported("geometry")
  Image   Image                   @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_usergeometry_image")
  user    User                    @relation(fields: [userId], references: [id])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model ImageGeometry {
  id      Int                     @id @default(autoincrement())
  imageId Int                     @unique
  rocks   Unsupported("geometry")
  Image   Image                   @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_imagegeometry_image")
}

model RockCenter {
  id             Int                      @id @default(autoincrement())
  imageId        Int
  classification String?                  @db.VarChar(255)
  location       Unsupported("geometry")
  shape          Unsupported("geometry")?
  Image          Image                    @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
